{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "./src",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true, // prod - false
        "sourceMap": true, // prod - false
        "outDir": "dist",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
    },
    "exclude": [
        "node_modules",
        "./dist",
    ]
}